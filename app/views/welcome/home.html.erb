

<div class="container">
  <div class="base">
    <h3>Sucursales</h3>

    <% sucursales = @user.sucursals %>
    <% if sucursales.count <= 0 %>
      <p>Sin empresas</p>
    <% else %>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Empleados</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
            <% sucursales.each do |sucursal| %>
              <tr>
                <td><%= sucursal.nombre %></td>
                <td><%= sucursal.empleados.count %></td>
                <td><%= link_to "Editar", edit_sucursal_path(sucursal) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    <% end %>
  </div>
</div>